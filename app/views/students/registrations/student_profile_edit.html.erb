<h2>Edit <%= resource_name.to_s.humanize %></h2>
<% resource = Student.find(current_student.id) unless resource %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "students/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_area :first_name, autofocus: true, autocomplete: "first_name" %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_area :last_name, autofocus: true, autocomplete: "last_name" %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana %><br />
    <%= f.text_area :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana %><br />
    <%= f.text_area :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :school_year_id %><br />
    <%= f.collection_select(:school_year_id, SchoolYear.all, :id, :name, {}, {class:"select-box", id:"student-school-year"}) %>
  </div>

  <div class="field">
    <%= f.label :club_id %><br />
    <%= f.collection_select(:club_id, Club.all, :id, :name, {}, {class:"select-box", id:"student-club-select"}) %>
  </div>

  <div class="field">
    <%= f.label :purpose %><br />
    <%= f.text_area :purpose, autofocus: true, autocomplete: "purpose" %>
  </div>

  <div class="field">
    <%= f.label :teacher_id %><br />
    <%= f.collection_select(:teacher_id, Teacher.all, :id, :first_name, {}, {class:"select-box", id:"teacher-select"}) %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
