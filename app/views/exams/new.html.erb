<h2>試験問題の新規作成する</h2>
<%= link_to :root do %>
  <button>戻る</button>
<% end %>
<br>
<%= form_with model: @exam , local: true do |f| %>
  <% if @exam.errors.any? %>
    <%= @exam.errors.count %>件のエラー
    <% @exam.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_area :name, autofocus: true, autocomplete: "exam_name", required: true %>
  </div>

  <div id="unit_field">
    <%= f.label :unit_id %><br />
      <%= f.collection_select :unit_id, Unit.roots, :id, :name, {include_blank: '指定なし'}, required: true %>
  </div>

  <div class="actions">
    <%= f.submit "create", data: { disable_with: '作成中...' } %>
  </div>
<% end %>
