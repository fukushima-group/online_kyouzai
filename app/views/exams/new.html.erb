<%= form_with model: @exam , local: true do |f| %>
<div class="field">
    <%= f.label :name %><br />
    <%= f.text_area :name, autofocus: true, autocomplete: "exam_name" %>
  </div>

  <div id="unit_field">
    <%= f.label :unit_id %><br />
      <%= f.collection_select :unit_id, Unit.roots, :id, :name,  include_blank: '指定なし' %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana %><br />
    <%= f.text_area :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana %><br />
    <%= f.text_area :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>